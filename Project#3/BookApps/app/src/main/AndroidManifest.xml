<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.booksapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_book"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_book"
        android:supportsRtl="true"
        android:theme="@style/Theme.BooksApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".main.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main.HomeActivity"/>
        <activity android:name=".detail.DetailBookActivity"
            android:label="DetailHomeActivity"
            android:theme="@style/Theme.BooksApp.NoActionBar"/>

    </application>
</manifest>